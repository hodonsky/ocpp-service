{
  "name": "@hodonsky/ocpp-service",
  "version": "0.3.0",
  "description": "[O|N]OpenNetwork - OCPP Service",
  "author": "eric.hodonsky@gmail.com",
  "license": "RPL",
  "scripts": {
    "prebuild": "rm -rf ./bin/*; npm install",
    "build": "esbuild ./src/index.ts --bundle --outfile=bin/index.js --platform=node --sourcemap && rm -rf node_modules && cp ./openssl-san.cnf.template bin/ ",
    "prestart": "npm run build && npx pm2 flush",
    "start": "npx pm2 start --time --no-daemon ./bin/index.js -i 1"
  },
  "engines": {
    "node": ">=22.9.0",
    "npm" : ">=10.8.3"
  },
  "dependencies": {
    "neo4j-driver"          : "^5.25.0",
